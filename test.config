#slide 41
units real

#slide 42
boundary p p p
atom_style full
read_data lmp.data

#slide 43

bond_style harmonic
angle_style charmm
dihedral_style charmm
improper_style harmonic
pair_style lj/cut 2.5
pair_coeff 3 3 0.02 1.78
pair_coeff 5 5 0.2  2.85
pair_coeff 4 4 0.02 1.78
pair_coeff 1 1 0.12 3.30
pair_coeff 6 6 0.27 3.59
pair_coeff 2 2 0.013 2.32
pair_modify mix arithmetic
# kspace_style pppm 0.0001
# kspace_modify gewald
neigh_modify delay 1 every 1 check yes one 200
bond_coeff 1 0 0

#make folder for the results:
variable results string "simulation_results"
variable el_results string "simulation_results_el"
shell mkdir ${results}
shell cd ${results}

#slide 52
thermo_style custom step temp press lx ke pe etotal density
thermo          100
#energy minimisation:
minimize 0.0 0.0 1000 10000
velocity all create 300.0 1234567 mom yes rot yes dist gaussian
#equilibration at NVT:
fix 1 all nvt temp 300.0 300.0 100 
timestep 0.001
run 2000
unfix 1
#equilibration at NpT:
fix 1 all npt temp 300.0 300.0 100 iso 1.0 1.0 1000 
run 5000
unfix 1